{
  "name": "marklift",
  "version": "0.1.1",
  "description": "URL â†’ Clean Markdown SDK (agent-optimized)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs --dts --clean --sourcemap && node -e \"const fs=require('fs'); const p='dist/cli.js'; if(fs.existsSync(p)) fs.writeFileSync(p,'#!/usr/bin/env node\\n'+fs.readFileSync(p,'utf8'))\"",
    "dev": "tsup src/index.ts src/cli.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit.test.ts",
    "test:e2e": "vitest run tests/e2e.test.ts",
    "test:watch": "vitest",
    "lint": "tsc --noEmit && eslint src"
  },
  "keywords": [
    "markdown",
    "url",
    "readability",
    "llm",
    "agent",
    "sdk"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/starc007/marklift"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "jsdom": "^25.0.1",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.3",
    "@types/turndown": "^5.0.5",
    "tsup": "^8.3.5",
    "typescript": "~5.7.2",
    "vitest": "^3.0.4"
  },
  "bin": {
    "marklift": "./dist/cli.js"
  }
}
